{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "outDir": "dist/build",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "rootDir": "./",
    "lib": ["es2020", "DOM", "DOM.Iterable"],  
    "baseUrl": "./",                                  /* Specify the base directory to resolve non-relative module names. */
    "paths": {
      "@ele": [ "hi-element/" ],
      "@ele/*": [ "hi-element/*" ],
      "@ui": [ "ui/" ],
      "@ui/*": [ "ui/*" ]
    }, 
  },
  "include": [
    "src"
  ]
}